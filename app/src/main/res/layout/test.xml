<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/result_item_shape"
        android:layout_margin="24dp"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:paddingBottom="0dp"
            android:paddingTop="15dp"
            android:textColor="#000"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/web_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:contentDescription="@string/see_location" />

        <ImageButton
            android:id="@+id/location_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_location_on_black_18dp"
            android:contentDescription="@string/see_location"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/result_item_shape"
        android:layout_margin="24dp"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:paddingBottom="0dp"
            android:paddingTop="15dp"
            android:textColor="#000"
            android:textSize="17sp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:contentDescription="@string/see_location" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_location_on_black_18dp"
            android:contentDescription="@string/see_location"/>




    </LinearLayout>


</LinearLayout>